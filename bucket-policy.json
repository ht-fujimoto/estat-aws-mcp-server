{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowECSTaskRole",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::639135896267:role/estatMcpTaskRole"
      },
      "Action": [
        "s3:GetObject",
